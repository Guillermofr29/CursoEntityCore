@model IEnumerable<CursoEntityCore.Models.Etiqueta>
@{
    ViewData["Title"] = "Lista de Etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Lista de etiquetas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear etiqueta</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Título</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
            @foreach (var etiqueta in Model)
            {
                <tr>
                    <td>@etiqueta.Titulo</td>
                    <td>@etiqueta.Fecha</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@etiqueta.EtiquetaId">Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@etiqueta.EtiquetaId">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay etiquetas</p>
    }
</div>