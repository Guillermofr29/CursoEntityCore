@model IEnumerable<CursoEntityCore.Models.Articulo>
@{
    ViewData["Title"] = "Lista de Artiículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Lista de artículos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear artículo</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(a=>a.ArticuloId)</th>
                <th>@Html.DisplayNameFor(a => a.TituloArticulo)</th>
                <th>@Html.DisplayNameFor(a => a.Descripcion)</th>
                <th>@Html.DisplayNameFor(a => a.Calificacion)</th>
                <th>@Html.DisplayNameFor(a => a.Fecha)</th>
                <th>@Html.DisplayNameFor(a => a.Categoria)</th>
                <th>Acciones</th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.ArticuloId</td>
                    <td>@articulo.TituloArticulo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Calificacion</td>
                    <td>@articulo.Fecha</td>
                    <td>@articulo.Categoria.Nombre</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@articulo.ArticuloId">Editar</a>
                        <a class="btn btn-success text-white" asp-action="AdministrarEtiquetas" asp-route-id="@articulo.ArticuloId">Administrar Etiquetas</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@articulo.ArticuloId">Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay artículos</p>
    }
</div>